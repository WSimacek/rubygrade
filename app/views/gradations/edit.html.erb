<h1>Editing gradation</h1>

<% form_for(@gradation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :grade %><br />
    <%= f.text_field :grade %>
  </p>
  <p>
    <%= f.label :assignment_id %><br />
    <%= f.text_field :assignment_id %>
  </p>
  <p>
    <%= f.label :student_id %><br />
    <%= f.text_field :student_id %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @gradation %> |
<%= link_to 'Back', gradations_path %>
