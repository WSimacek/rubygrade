<% content_for :header do -%>
<%= "Categories" %>
<% end -%>
<% content_for :sidebar do -%>
	<h2>Help</h2>
	
	<ul>
          Here you may enter categories into which you can organise assignments and attendance periods.<p>
            Example categories might include:<i>Summer Term, Winter Term, Homework, Written Assessments, Practical Assessments, etc. </i> 
	</ul>
		
		
	</p>
<% end -%>



<table>
  <thead>
    <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
</thead>

<% for category in @categories %>
  <tr valign="top" class="<%= cycle('odd', 'even') %>">
    <td><%=h category.name %></td>
    <td><%= link_to image_tag('pencil.png', {:title => 'Edit Category', :border => 0}), edit_category_path(category) %><%= "Edit" %></td>
    <td><%= link_to image_tag('delete.png', {:title => 'Delete Category', :border => 0}), category, :confirm => 'Are you sure?', :method => :delete %><%= "Delete" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag('add.png', {:title => 'Add New Category', :border => 0}), new_category_path %><%= link_to 'New Category', new_category_path %>
